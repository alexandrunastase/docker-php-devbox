# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

# Set default charset
[*.{php,js}]
charset = utf-8

# 2 space indentation for yaml
[*.{yaml,yml}]
indent_style = space
indent_size = 2

[Makefile]
indent_style = tab
